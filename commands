#             generate controllers
rails generate controller controller_name	
rails g controller controller_name
#note: add --no-test-framework   if dont want to create test files


#			generate models
 rails generate model model_name attribute:type attribute2:type ...
 rails g model model model_name attribute:type attribute2:type ...	

 #			create database
 rake db:create

 #			migrate database
rake db:migrate

#			rest database
rake db:reset

#			drop database
rake db:drop


#			Open rails console
rails console
rails c
#note: add --sandbox to rollback after close the console

#			Upload to heroku
git push heroku

#			Open heroku
heroku open

#			View heroku logs
heroku logs

